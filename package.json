{
  "name": "dimabory.github.io",
  "author": "Dmytro Borysovskyi",
  "homepage": "https://dimabory.github.io",
  "version": "0.13.0",
  "description": "Personal SPA for fun and self-development.",
  "license": "MIT",
  "private": true,
  "keywords": [
    "vue",
    "gh-pages"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "rm -rf ./dist && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "git-b-is": "git-branch-is",
    "prerelease": "npm run git-b-is gh-pages && npm run build",
    "release": "vcg --branch=master --repo=git@github.com:dimabory/dimabory.github.io.git && standard-version -a",
    "push-gh": "git push --follow-tags origin gh-pages"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.0",
    "@fortawesome/free-brands-svg-icons": "^5.1.0",
    "@fortawesome/free-solid-svg-icons": "^5.1.0",
    "@fortawesome/vue-fontawesome": "^0.1.0",
    "axios": "^0.18.0",
    "bootstrap-vue": "^2.0.0-rc.11",
    "vue": "^2.5.16",
    "vue-highlightjs": "^1.3.3",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "babel-preset-env": "^1.7.0",
    "git-branch-is": "^2.0.0",
    "node-sass": "^4.9.2",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.3",
    "standard-version": "^4.4.0",
    "vue-cli-ghpages": "^1.0.0",
    "vue-template-compiler": "^2.5.16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "warn"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "npm run lint"
  }
}
